<odoo>
    <!-- Define the Client Action -->
    <record id="action_tug_package_mover_client" model="ir.actions.client">
        <field name="name">Package Mover</field>
        <field name="tag">tug_barcode_custom_client_action</field>
        <field name="target">fullscreen</field>
    </record>

    <!-- 
         MOVED: Placed under 'Inventory > Operations' (stock.menu_stock_warehouse_mgmt)
         This ensures it is visible in the standard backend, as the Barcode App 
         interface in Odoo 17 can be restrictive with custom menus.
    -->
    <menuitem id="menu_tug_package_mover"
              name="Scan &amp; Move"
              parent="stock.menu_stock_warehouse_mgmt"
              action="action_tug_package_mover_client"
              sequence="150"/>
</odoo>